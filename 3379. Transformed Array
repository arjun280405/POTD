//Modulo ka khel
class Solution {
public:
    vector<int> constructTransformedArray(vector<int>& nums) {
         int n=nums.size();
         vector<int>result(n);
         for(int i=0;i<n;i++)
         {
            //for all case one formula
            int indx=((i+nums[i]%n)+n)%n;
            result[i]=nums[indx];
            
         }
         return result;  
    }
};
class Solution {
public:
    vector<int> constructTransformedArray(vector<int>& nums) {
         int n=nums.size();
         vector<int>result(n);
         for(int i=0;i<n;i++)
         {
            int j=(i+nums[i])%n;
            result[i]=nums[j+(-(j<0)&n)];///(-(j<0)&n) handles negative case
         }
         return result;  
    }
};
