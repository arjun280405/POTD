/*
class Node {
public:
    int data;
    Node* next;
    Node* bottom;

    Node(int x) {
        data = x;
        next = NULL;
        bottom = NULL;
    }
};
*/

class Solution {
  public:
    Node* mergeTwoSortedList(Node*l1,Node*l2)
    {
        Node*result;
        if(l1==NULL)return l2;
        if(l2==NULL)return l1;
        if(l1->data<l2->data)
        {
            result=l1;
            result->bottom=mergeTwoSortedList(l1->bottom,l2);
        }
        else
        {
            result=l2;
            result->bottom=mergeTwoSortedList(l1,l2->bottom);
        }
        return result;
    }
    Node *flatten(Node *head) {
        //We have to believe here on recursion that it will return the list in horizontal and sorted form
        if(!head)
        {
            return head;
        }
        //Calling for next horizontal list 
        Node* head2=flatten(head->next);
        //and Now we get two list so lets merge it
        return mergeTwoSortedList(head,head2);
    }
};
